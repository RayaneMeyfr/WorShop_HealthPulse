{
  "openapi": "3.0.4",
  "info": {
    "title": "Health Dashboard API",
    "version": "v1"
  },
  "paths": {
    "/api/Dashboard": {
      "get": {
        "tags": [
          "Dashboard"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/DashboardResponseDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DashboardResponseDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/DashboardResponseDto"
                }
              }
            }
          }
        }
      }
    },
    "/api/Dashboard/patient/{patientId}": {
      "get": {
        "tags": [
          "Dashboard"
        ],
        "parameters": [
          {
            "name": "patientId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/PatientHistoriqueResponseDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PatientHistoriqueResponseDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/PatientHistoriqueResponseDto"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ConsultationDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "patientId": {
            "type": "string",
            "format": "uuid"
          },
          "motif": {
            "type": "string",
            "nullable": true
          },
          "tarif": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "DashboardResponseDto": {
        "type": "object",
        "properties": {
          "totalPatients": {
            "type": "integer",
            "format": "int32"
          },
          "consultationsParType": {
            "type": "object",
            "additionalProperties": {
              "type": "integer",
              "format": "int32"
            },
            "nullable": true
          },
          "chiffreAffairesTotal": {
            "type": "number",
            "format": "double"
          },
          "totalPrescriptions": {
            "type": "integer",
            "format": "int32"
          },
          "patientsParGroupeSanguin": {
            "type": "object",
            "additionalProperties": {
              "type": "integer",
              "format": "int32"
            },
            "nullable": true
          },
          "genereLe": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "PatientDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "nom": {
            "type": "string",
            "nullable": true
          },
          "groupeSanguin": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "PatientHistoriqueResponseDto": {
        "type": "object",
        "properties": {
          "patient": {
            "$ref": "#/components/schemas/PatientDto"
          },
          "consultations": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ConsultationDto"
            },
            "nullable": true
          },
          "prescriptions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PrescriptionDto"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "PrescriptionDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "consultationId": {
            "type": "string",
            "format": "uuid"
          },
          "medicament": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  },
  "tags": [
    {
      "name": "Dashboard"
    }
  ]
}